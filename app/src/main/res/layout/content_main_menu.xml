<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cat.helm.tyrrel.MenuActivity"
    tools:ignore="HardcodedText"
    android:id="@+id/clMenuActivity">


    <ImageView
        android:id="@+id/ivThermostat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_rect_shape"
        android:contentDescription="Thermostat"
        android:cropToPadding="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivPowermeter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_thermostat" />

    <ImageView
        android:id="@+id/ivPowermeter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_rect_shape"
        android:contentDescription="Power meter"
        android:cropToPadding="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivThermostat"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_power_meter" />

</android.support.constraint.ConstraintLayout>